@model IdentityServer.Quickstart.Account.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>

    <title>Lulapay - Login</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico"/>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico"/>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>

<div class="container-fluid m-0 p-0">
    <div class="row no-gutters">
        <partial name="_Hero"/>
        <div class="col-md-8 bg-light">
            <div class="m-3">
                <partial name="_ValidationSummary"/>
            </div>
            <div class="card border-0 mx-auto my-5 w-75">
                @if (Model.EnableLocalLogin)
                {
                    <div class="card-body">
                        <h1 class="text-primary mb-5 text-center"><strong>Login</strong> to lulapay</h1>
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl"/>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                                <small><span class="text-danger" asp-validation-for="Email"></span></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password"
                                       autocomplete="off">
                                <small><span class="text-danger" asp-validation-for="Password"></span></small>
                            </div>
                            <div class="form-group">
                                <small>
                                    <a href="@Url.Action("Forgot", "Account", new { returnUrl = Model.ReturnUrl })"
                                       class="text-decoration-none text-dark">
                                        Forgot password?
                                    </a>
                                </small>
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            <small>Remember My Login</small>
                                        </label>
                                    </div>
                                </div>
                            }
                            <div class="form-group mb-3 text-center">
                                <small class="text-muted">
                                    By logging in, you agree to our 
                                    <a href="/terms" target="_blank" class="text-dark">Terms and Conditions</a>
                                    and <a href="/privacy" target="_blank" class="text-dark">Privacy Policy</a>
                                </small>
                            </div>

                            <button class="btn btn-primary btn-block" name="button" value="login">Login</button>
                        </form>
                        <div class="text-center mt-3">
                            <p class="mb-0">
                                <small>
                                    <a href="@Url.Action("Create", "Account", new { returnUrl = Model.ReturnUrl })"
                                       class="text-decoration-none text-dark">
                                        Don't have an account yet?
                                    </a>
                                </small>
                            </p>
                        </div>
                    </div>
                }
            </div>
            <partial name="_Footer"/>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>